<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="match_parent"
        android:background="@color/darker_gray">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/winVImg"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher_round"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/winVName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/user32"
                android:text="Name"
                android:textSize="20dp"/>


            <ImageView
                android:id="@+id/winVCallImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/winVName"
                android:layout_marginTop="5dp"
                android:src="@drawable/phonecall32"/>

            <TextView
                android:id="@+id/winVNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/winVName"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="40dp"
                android:text="Contact Number"
                android:textSize="20dp"/>


            <TextView
                android:id="@+id/winVGrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/winVNumber"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/blooddrop32"
                android:text="Blood Group"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/winVAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/winVGrp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/age1"
                android:text="Age"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/winVLoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/winVAge"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/address1"
                android:text="Address"
                android:textSize="20dp"/>


        </RelativeLayout>

    </LinearLayout>


</LinearLayout>